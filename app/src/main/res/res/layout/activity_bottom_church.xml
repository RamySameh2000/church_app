<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/admin"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/ic_person"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:backgroundTint="@color/teal_200"
        android:text="Admin"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/admin"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/mn"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/ic_person"
        app:layout_constraintTop_toBottomOf="@id/admin" />

    <Button
        android:id="@+id/mnl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:backgroundTint="@color/teal_200"
        android:text="Men Left"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@id/mn"
        app:layout_constraintTop_toBottomOf="@id/admin" />


    <ImageView
        android:id="@+id/mn2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/ic_person"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mn" />


    <Button
        android:id="@+id/mnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:backgroundTint="@color/teal_200"
        android:text="Men Center"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@id/mn2"
        app:layout_constraintTop_toBottomOf="@id/mn" />


    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/ic_person"
        app:layout_constraintTop_toBottomOf="@id/mn2"
        android:id="@+id/wom1"/>


    <Button
        android:id="@+id/womenc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mn2"
        app:layout_constraintStart_toEndOf="@id/wom1"
        android:backgroundTint="@color/teal_200"
        android:layout_marginTop="70dp"
        android:textAllCaps="false"
        android:text="Women Center"/>



    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/ic_person"
        app:layout_constraintTop_toBottomOf="@id/wom1"
        android:id="@+id/wom2"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:textAllCaps="false"
        android:id="@+id/womenr"
        app:layout_constraintTop_toBottomOf="@id/wom1"
        app:layout_constraintStart_toEndOf="@id/wom2"
        android:layout_marginTop="70dp"
        android:text="Women Right"/>


</android.support.constraint.ConstraintLayout>